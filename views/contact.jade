extends layout

block content

	.contact
		form#contactForm(method='post', action='contact/send-email', name= 'contactForm')
			h3 Send an Email Now!
			.col-md-6.contact-grid
				div
					label Name
					input#name.form-control(type='text', name='name', placeholder='Enter your Full Name', required='', aria-required='true', value= nameValue)
				div
					label Email
					input#email.form-control(type='email', name='email', placeholder='engineeringbooksbuyandsell@gmail.com', required='', aria-required='true', value= emailValue)
				div
					label Message
					textarea#message.form-control(type='text', name='message', placeholder='Enter your Message', required='', aria-required='true')
						|#{messageValue}
				br
				button.btn.waves-effect.waves-light.pink(type='submit')
					| Submit 
				br
				br
				| #{statusValue}
	.clearfix 
